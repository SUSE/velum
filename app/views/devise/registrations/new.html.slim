.row
  .col-sm-6
    h1.Raleway-font
      = product_name
    .margins-updown
      p #{product_name} allows you to provision, manage, and scale container-based applications.
      p It automates your tedious management tasks allowing you to focus on development and writing apps to meet business goals.
    p
      | I already have an account.
      = link_to 'Log in', new_user_session_path, id: "sign-in", class: 'btn btn-default'
  .col-sm-4.col-sm-offset-1
    h2.Raleway-font
      | Sign Up
    - if resource.errors.any?
      .alert.alert-dismissible.fade.in.text-left[class="alert-danger"]
        button.close class="alert-hide" type="button" data-dismiss="alert"
          span aria-hidden="true" &times;
          span.sr-only Close
        .alert-message
          span= resource.errors.full_messages.join(", ")
    = form_for(resource, as: resource_name, url: user_registration_path, :html => {class: 'margins-updown', :autocomplete => "off"}) do |f|

      .form-group
        = f.email_field :email, autofocus: true, class: 'form-control', placeholder: 'Enter your email address', required: true
      .form-group
        = f.password_field :password, class: 'form-control', pattern: "^.{#{Devise.password_length.begin},#{Devise.password_length.end}}$", placeholder: "Select your password (#{Devise.password_length.begin} characters min.)", required: true, oninvalid: "setCustomValidity('Password has to be between #{Devise.password_length.begin} and #{Devise.password_length.end} characters long')", oninput: "setCustomValidity('')"
      .form-group
        = f.password_field :password_confirmation, class: 'form-control', placeholder: 'Confirm your password', required: true, pattern: "^.{#{Devise.password_length.begin},#{Devise.password_length.end}}$", oninvalid: "setCustomValidity('Password has to be between #{Devise.password_length.begin} and #{Devise.password_length.end} characters long')", oninput: "setCustomValidity('')"

      button.btn.btn-success.btn-block
        | Create Admin
